#include <iostream>
using namespace std;
void main() {
	float a, b, x, dx, anal, num;
	// differentiation
	cout << "a,b ? =";
	cin >> a >> b;
	cout << "x, dx ? =";
	cin >> x >> dx;
	anal = a * b * cos(b * x);
	num = (a * sin(b * x + b * dx) - a * sin(b * x)) / dx;
	cout << "num=" << num << endl;
	cout << "anal=" << anal << endl;
	cout << "error = " << (num - anal) / anal * 100 << "%\n";

	// integration
	float c, d;
	int N;
	cout << " c d N = ";
	cin >> c >> d >> N;
	anal = -a * (cos(b * d) - cos(b * c)) / b;
	dx = (d - c) / N;
	num = 0;
	for (int i = 0; i < N; i++) {
		num += a * sin(b * (c + dx * i)) * dx;
	}
	cout << " num " << num << " anal " << anal << endl;
	cout << " error = " << (num - anal) / anal * 100 << "%\n";
}
